# Shell Spawn
super + Return
  gnome-terminal

# reload config
super + Escape
  pkill -USR1 -x sxhkd

# for rofi
super +  p
  rofi -m -1 -no-config -no-lazy-grab -show drun -modi drun -theme ~/.config/polybar/shapes/scripts/rofi/launcher.rasi

#quit/restart bspwm
shift + super + {q,r}
  bspc {quit, wm -r}

#focus window
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

#window state
super + {t,shift + t,s,f,f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen,~fullscreen}

#kill the node
super + {_,shift + }w
  bspc node -{c,k}

#swap current node with biggest window
super + g
  bspc node -s biggest.local

#screen lock
super + alt + l
  systemctl suspend

# focus the n/p desktop in current monitor
super + bracket{left,right}
  bspc desktop -f {prev,next}.local

# Smart resize, will grow or shrink depending on location.
# Will always grow for floating nodes.
super + ctrl + {Left,Down,Up,Right}
  n=10; \
  { d1=left;   d2=right;  dx=-$n; dy=0;   \
  , d1=bottom; d2=top;    dx=0;   dy=$n;  \
  , d1=top;    d2=bottom; dx=0;   dy=-$n; \
  , d1=right;  d2=left;   dx=$n;  dy=0;   \
  } \
  bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy

# focus the last node/desktop
#super + {grave,Tab}
#  bspc {node,desktop} -f last

# focus/send a node to a desktop
super + {_,shift+}{1-9,0}
  bspc {desktop -f, node -d} '^{1-9,10}'

# focus on prev/next monitor
super + {shift +,_} + m
  bspc monitor --focus {prev,next}


# equalize local parent/root child split
super + {_, shift +} + e
  bspc node {@parent, @/} --equalize

# rotate a tree
super + r
  bspc node @parent --rotate 90

# preselect direction (useful for directional splits)
super + ctrl + {h,j,k,l}
  bspc node -p {west,south,north,east}


# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Audio control
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -2%
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +2%

# Brightness control
XF86MonBrightnessDown
    xbacklight -dec 5
XF86MonBrightnessUp
    xbacklight -inc 5

# Keyboard backlight 
XF86KbdBrightnessUp
    sudo /opt/tweaks/kbd_backlight_adjust -inc
XF86KbdBrightnessDown
    sudo /opt/tweaks/kbd_backlight_adjust -dec
